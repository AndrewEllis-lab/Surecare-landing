body {
  font-family: Arial, sans-serif;
  text-align: center;
  padding-top: 100px;
  background-color: #f4faff;
}
h1 {
  font-size: 2.5rem;
  color: #007acc;
}
.bold-text {
  font-weight: bold;
}
p {
  font-size: 1.2rem;
  color: #333;
}
.navbar {
  background-color: #007acc;
  padding: 10px 0;
}
.navbar a {
  color: white;
  margin: 0 15px;
  text-decoration: none;
  font-weight: bold;
}
.btn {
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #007acc;
  color: white;
  text-decoration: none;
  border-radius: 6px;
}
